<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#f5163154"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_manue"
    tools:context="info.androidhive.loginandregistration.activity.ManueActivity">

    <Button
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:text="點餐"
        android:id="@+id/btn_store_order"
        android:background="@android:color/holo_orange_dark"
        android:textColor="@android:color/background_dark"
        android:onClick="storeorder"
        android:textSize="20dp"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_alignTop="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="logout"
        android:id="@+id/btn_logout"
        android:background="#ff2929"

        android:onClick="logout"
        android:clickable="false"
        android:layout_marginBottom="38dp"
        android:textColor="#fffdfd"
        android:textSize="15dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:text="食材平台"
        android:id="@+id/foodnet_btn"
        android:background="@android:color/holo_orange_dark"

        android:onClick="foodmateria"
        android:layout_below="@+id/btn_store_order"
        android:layout_alignLeft="@+id/btn_store_order"
        android:layout_alignStart="@+id/btn_store_order"
        android:layout_marginTop="38dp"
        android:textColor="@android:color/background_dark"
        android:textSize="20dp" />

    <Button
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:text="查詢訂單"
        android:id="@+id/button4"

        android:background="@android:color/holo_orange_dark"
        android:onClick="select"
        android:layout_marginBottom="128dp"
        android:textColor="@android:color/background_dark"
        android:textSize="20dp"
        android:layout_above="@+id/btn_logout"
        android:layout_alignRight="@+id/button6"
        android:layout_alignEnd="@+id/button6"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp" />

    <Button
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:text="餐廳狀況"
        android:id="@+id/button6"
        android:textSize="20dp"
        android:background="#0ef6df"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:text="餐點數量"
        android:background="@android:color/holo_orange_dark"
        android:textColor="@android:color/background_dark"
        android:id="@+id/btn_situation"

        android:onClick="situation"

        android:allowUndo="false"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/foodnet_btn"
        android:layout_alignBottom="@+id/foodnet_btn"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4" />

</RelativeLayout>
